class Solution {
public:
    bool wordBreak(string s, vector<string>& w) {
        int p=s.length();
        if(p==0) return true;
         bool dp[p+1]; 
        memset(dp, 0, sizeof(dp));
        for(int i=1;i<=p;i++)
        {
            if(dp[i]==false&&find(w.begin(),w.end(),s.substr(0,i))!=w.end())
                dp[i]=true;
            if(dp[i])
            {
                if(i==p) return true;
                for (int j = i+1; j <= p; j++) 
                {
                    if(dp[j]==false&&find(w.begin(),w.end(),s.substr(i,j-i))!=w.end())
                        dp[j]=true;
                    if(j==p && dp[j]==true)
                    return true;
                }
            }
           
        }
        return false;
    }
};

