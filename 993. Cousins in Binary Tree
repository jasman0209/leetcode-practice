/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
    int helper(TreeNode* root, int x,int &p)
    {
        if(root==NULL){ return -1;}
        if(root->left&&root->left->val==x){
            p=root->val;
            return 0;
        }
        if(root->right&&root->right->val==x){
           // cout<<"a";
            p=root->val;
            return 0;
        }
        
        int ld=helper(root->left,x,p);
        if(ld!=-1) return 1+ld;
        int rd=helper(root->right,x,p);
        if(rd!=-1) return 1+rd;
        return -1;
    }
    bool isCousins(TreeNode* root, int x, int y) {
        int px=-1,py=-1;
        //cout<<helper(root,x,px)<<" "<<helper(root,y,py)<<endl;
        //cout<<px<<" "<<py;
        return (helper(root,x,px)==helper(root,y,py)&&px!=-1&&py!=-1&&py!=px);
    }
};
