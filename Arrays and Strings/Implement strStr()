class Solution {
public:
    int strStr(string haystack, string needle) {
        int n=needle.length(),m=haystack.length();
        if(n==0) return 0;
        if(m==0) return -1;
        if(!needle.compare(haystack)) return 0;
        for(int i=0;i<m-n+1;i++)
        {
            if(!needle.compare(haystack.substr(i,n)))
                return i;
        }
        
        return -1;
    }
};
