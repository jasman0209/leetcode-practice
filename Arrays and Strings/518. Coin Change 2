class Solution {
public:
   int change(int amount, vector<int>& coins) {
        int dp[amount+1];
        memset(dp,0,sizeof(dp));
       dp[0]=1;
       int n=amount+1;
       
         for(int i=0;i<coins.size();i++)
        {
             int c=coins[i];
            for(int j=c;j<n;j++)
            { 
                dp[j]+=dp[j-c];
            }
         }
        return dp[amount];
        
         
    }
};
