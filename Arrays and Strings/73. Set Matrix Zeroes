class Solution {
public:
   #define flag 'c'

void setZeroes( vector<vector<int>>& matrix ) 
{
    int r = matrix.size();
    int c = matrix[0].size();
    
    for(int i=0; i<r; i++)  
    {
        for(int j=0; j<c; j++)
        {
            if(matrix[i][j] == 0)
            {
                for(int k = 0; k<c; k++)
                {
                    if( matrix[i][k] == flag || matrix[i][k] == 0 ) continue;
                    else matrix[i][k] = flag;
                }
                
                for(int k = 0; k<r; k++)
                {
                    if( matrix[k][j] == flag ||  matrix[k][j] == 0 ) continue;
                    else matrix[k][j] = flag;
                }
            }
        }
    }
    
    for(int i=0; i<r; i++)
    {
        for(int j=0; j<c; j++)
        {
            if( matrix[i][j] == flag )
            {
                matrix[i][j] = 0;
            }
        }
    }
    
}
};
