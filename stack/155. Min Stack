class MinStack {
public:
    /** initialize your data structure here. */
    stack<int> s;
    int min;
    MinStack() {
        min = INT_MAX;
    }
    
    void push(int x) {
        if (x <= min)
        {
            s.push(min);
            min = x;
        }
        s.push(x);
    }
    
    void pop() {
        if (s.top() == min)
        {
            s.pop();
            min = s.top();
            s.pop();
        }
        else
        {
            s.pop();
        }
    }
    
    int top() {
        return s.top();
    }
    
    int getMin() {
        return min;
    }
};
