class Solution {
public:
    int numDecodings(string s) {
        
        int n=s.length();
        int dp[n+1];
        memset(dp,0,sizeof(dp));
        dp[0]=1;
        dp[1]=1;
        if(s[0]=='0') return 0;
        for(int i=2;i<=n;i++)
        {
            if(s[i-1]!='0')
            {
                dp[i]+=dp[i-1];
            }
            int a=s[i-1]-'0';
            //cout<<s[i-1]<<" "<<a<<endl;
            if(s[i-2]!='0'){
            int num=(s[i-2]-'0')*10+a;
            //cout<<num<<endl;
            if(num>=1&&num<=26)
            {
                dp[i]+=dp[i-2];
            }
            if(num==0||(a==0&&num>26)) return 0;
            }
                
        }
        return dp[n];
    }
};
