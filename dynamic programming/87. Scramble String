class Solution {
public:
    unordered_map<string,bool> m;
    bool isScramble(string s1, string s2) {
        ios_base::sync_with_stdio(false);
    cin.tie(NULL);
        cout.tie(NULL);
        string key=s1;
        key.push_back(' ');
        key.append(s2);
        if(!s1.compare(s2)){
            m[key]=true;
            return true;
        }
        if(s1.length()<=1) 
        {
            m[key]=false;
            return false;
        }
        if(s1.length()!=s2.length())
        {
            m[key]=false;
            return false;
        }
        if(s1==""&&s2=="") 
        {
            m[key]=true;
            return true;
        }
        if(m.find(key)!=m.end())
            return m[key];
                int n=s1.length();

        int count[26] = {0};
        for(int i=0; i<n; i++)
        {
            count[s1[i]-'a']++;
            count[s2[i]-'a']--;
        }
        
        for(int i=0; i<26; i++)
        {
            if(count[i]!=0)
            {
                m[key]=false;
                return false;
            }
       }
        
        bool flag=false;
        for(int i=1;i<n;i++)
        {
            if(isScramble(s1.substr(0,i),s2.substr(n-i,i))==true&&isScramble(s1.substr(i,n-i),s2.substr(0,n-i))==true)
            {
                m[key]=true;
                return true;
            }
            if(isScramble(s1.substr(0,i),s2.substr(0,i))==true&&isScramble(s1.substr(i,n-i),s2.substr(i,n-i))==true)
            {
                m[key]=true;
                return true;
            }
        }
        m[key]=false;
        return false;
        
    }
};
